{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "lib": ["es5", "es6", "es7",
      "es2015", "es2016",
      "es2017", "es2018",
      "esnext"
    ],
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true
  }
}